%% 'Blackboard bold' symbols (for the sets N,Z,Q,R,C, etc) 
\@tfor\next :=ABCDEFGHIJKLMNOPQRUSTUVWXYZ\do{%
	\def\command@factory#1{%
		\expandafter\def\csname #1\endcsname{\mathbb{#1}}
	}
	\expandafter\command@factory\next
}

%% Some extra macros for ease of use; these are non-standard!
\newcommand{\GF}{$\mathrm{GF}$} % Galois field
\newcommand{\rd}{\, \mathrm{d}} % Roman d for use in integrals: $\int f(x) \rd x$ 
\renewcommand{\d}{\mathrm{d}}  % Roman d for use in derivatives: $\dfrac \d {\d x}$ *
\newcommand{\rdelta}{\,\delta} % Delta operator for use in sums 
\newcommand{\rD}{\mathrm{D}} % Differential operator D 

%% Script letters (for sets, etc)
\@tfor\next := ABCDEFGHIJKLMNOPQRSTUVWXYZ\do{%
	\def\command@factory#1{%
		\expandafter\def\csname #1#1\endcsname{\mathcal{#1}}
	}
	\expandafter\command@factory\next
}

%% Fraktur letters (for classes, etc)
\@tfor\next := ABCDEFGHIJKLMNOPQRSTUVWXYZ\do{%
	\def\command@factory#1{%
		\expandafter\def\csname c#1\endcsname{\mathfrak{#1}}
	}
	\expandafter\command@factory\next
}

